<div class="d-flex align-items-center justify-content-center">
  <h1 class="subheader">Reset your password</h1>
</div>
<hr>

<div class="container">
  <%= form_with model: @user, url: password_reset_edit_path( token: params[:token]), local: true, data: { turbo: false}, class: "container" do |form| %>

    <div class="mb-3">
    <%= form.label :password, class: "required text-muted" %>
    <%= form.password_field :password, class: "form-control", required: true, placeholder: "Password" %>
    </div>

    <div class="mb-3">
    <%= form.label :password_confirmation, class: "required text-muted" %>
    <%= form.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Password" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Reset Password", class: "btn btn-primary" %>
    </div>

    <div class="mb-3"><%= link_to "Forgot your password?", new_password_reset_path %></div>
  <% end %>
</div>