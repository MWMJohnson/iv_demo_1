<div class="d-flex align-items-center justify-content-center">
  <h1 class="display-5 subheader"> Login</h1>
</div>

<hr>

<div class="d-flex align-items-center justify-content-center mt-3 text-muted">
  <h4 class="text-muted">New user? <%= link_to "Sign up here!",new_registration_path %></h4>
</div>


<div class="container">
  <%= form_with model: @user, local: true, data: { turbo: false}, class: "container", url: session_path, method: :post do |form| %>
    <div class="mb-3">
    <%= form.label :email, class: "required text-muted" %>
    <%= form.email_field :email, class: "form-control", required: true, placeholder: "Email" %>
    </div>

    <div class="mb-3">
    <%= form.label :password, class: "required text-muted" %>
    <%= form.password_field :password, class: "form-control", required: true, placeholder: "Password" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>

    <div class="mb-1"><%= link_to "Forgot your password?", new_password_reset_path %></div>
    <div class="mb-1"><%= link_to "New User? Sign Up Here!", new_registration_path %></div>

  <% end %>
</div>
