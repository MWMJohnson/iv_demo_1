<div class="d-flex align-items-center justify-content-center">
  <h1 class="subheader"> Login</h1>
</div>
<hr>

<div class="container">
  <%= form_with model: @user, local: true, data: { turbo: false}, class: "container", url: session_path, method: :post do |form| %>
    <div class="mb-3">
    <%= form.label :email, 'Email' %>
    <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="mb-3">
    <%= form.label :password, 'Password' %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to "Forgot your password?", new_password_reset_path %>
</div>
