<div class="d-flex align-items-center justify-content-center">
  <h1 class="display-5 subheader">Update Password</h1>
</div>
<hr>

<div class="container">
  <%= form_with model: current_user, local: true, data: { turbo: false}, class: "container", url: password_path do |form| %>
    <div class="mb-3">
      <%= form.label :password_challenge, "Current Password", class: "required text-muted" %>
      <%= form.password_field :password_challenge, class: "form-control", required: true, placeholder: "Current Password" %>
    </div>

    <div class="mb-3">
      <%= form.label :password, "New Password", class: "required text-muted" %>
      <%= form.password_field :password, class: "form-control", required: true, placeholder: "New Password" %>
    </div>

    <div class="mb-3">
      <%= form.label :password_confirmation, "Confirm New Password", class: "required text-muted" %>
      <%= form.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Confirm New Password" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Update Password", class: "btn btn-primary" %>
    </div>
    <div class="mb-3"><%= link_to "Forgot your password?", new_password_reset_path %></div>
  <% end %>
    
  </div>