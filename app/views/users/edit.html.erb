<div class="d-flex align-items-center justify-content-center">
  <h1 class="subheader">Edit Profile</h1>
</div>
<hr>

<div class="container">
<%= form_with model: current_user, local: true, data: { turbo: false}, class: "container", url: user_path(current_user), method: :patch do |form| %>
  <p>First Name: <%= current_user.first_name.capitalize %></p>
  <p>Last Name: <%= current_user.last_name.capitalize %></p>
  <p>Email: <%= current_user.email %></p>
    
    <div class="edit-fields mb-3">
    <%= form.check_box :edit_first_name, class: "form-check-input", id: "edit_first_name_checkbox" %>
    <%= form.label :edit_first_name, "Edit first name?", class: "form-check-label text-muted" %>
    <% form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control", placeholder: "First name" %>
    </div>
    
    <div class="edit-fields mb-3">
    <%= form.check_box :edit_last_name, class: "form-check-input", id: "edit_last_name_checkbox" %>
    <%= form.label :edit_last_name, "Edit last name?", class: "form-check-label text-muted" %>
    <% form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control", placeholder: "Last name" %>
    </div>
    
    <div class="edit-fields mb-3">
    <%= form.check_box :edit_email, class: "form-check-input", id: "edit_email_checkbox" %>
    <%= form.label :edit_email, "Edit email?", class: "form-check-label text-muted" %>
    <% form.label :email %>
    <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="mb-3">
      <%= form.label :password_challenge, "Current Password", class: "required text-muted" %>
      <%= form.password_field :password_challenge, class: "form-control", required: true, placeholder: "Current Password" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
    <div class="mb-3"><%= link_to "Forgot your password?", new_password_reset_path %></div>
  <% end %>
</div>

